<div class="page-header">
  <%= link_to new_power_unit_state_path(@power_unit), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New State
  <% end %>
  <h1>Listing states</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Raw value</th>
            <th>State</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @states) do |state| %>
            <td><%= state.raw_value %></td>
            <td><%= state.state %></td>
            <td><%= link_to 'Show', power_unit_state_path(@power_unit, state) %></td>
        <td><%= link_to 'Edit', edit_power_unit_state_path(@power_unit, state) %></td>
        <td><%= link_to 'Destroy', power_unit_state_path(@power_unit, state), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

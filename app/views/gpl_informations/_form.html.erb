<%= form_for(@gpl_information, :as => :gpl_information, :url => power_unit_gpl_information_path(@power_unit, @gpl_information), :html => { :class => "form-horizontal" }) do |f| %>
  <% if @gpl_information.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@gpl_information.errors.count, "error") %> prohibited this gpl_information from being saved:</h4>

      <ul>
      <% @gpl_information.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :raw_value, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :level, :class => "form-control" %>
    </div>
  </div>
  <!--
  <div class="form-group">
    <%= f.label :created_at, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :created_at, :class => "form-control" %>
    </div>
  </div>
  -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

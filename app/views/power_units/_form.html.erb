<%= form_for(@power_unit, :html => { :class => "form-horizontal", oninput:"mix.value=parseInt(power_unit_diesel_mixed_set.value)+'%'" }) do |f| %>
  <% if @power_unit.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@power_unit.errors.count, "error") %> prohibited this power_unit from being saved:</h4>

      <ul>
      <% @power_unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :diesel_enabled, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :diesel_enabled, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gpl_enabled, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :gpl_enabled, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mixed_enabled, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :mixed_enabled, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :diesel_mixed_set, :class => "col-sm-2 control-label col-xs-12" %>
    <div class="col-sm-1 col-xs-2">30</div>
    <div class="col-sm-8 col-xs-8">
      <%= f.range_field :diesel_mixed_set, :min=>30, :max=>100, :class=>"slide"%>
    </div>
    <div class="col-sm-1 col-xs-2">100</div>
  </div>
  <div class="row">
    <output class="col-12" for="power_unit_diesel_mixed_set" id='hidden' name="mix"><%= f.object.diesel_mixed_set %>%</output>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

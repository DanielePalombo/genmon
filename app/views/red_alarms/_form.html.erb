<%= form_for(@red_alarm, :as => :red_alarm, :url => power_unit_red_alarm_path(@power_unit, @red_alarm), :html => { :class => "form-horizontal" }) do |f| %>
  <% if @red_alarm.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@red_alarm.errors.count, "error") %> prohibited this alarm from being saved:</h4>

      <ul>
      <% @red_alarm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :raw_value, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :raw_value, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
